<h1><%= current_business.name %> Wallet</h1>
<% @wallets.each do |wallet| %>
<div>
  <p>Name: <%= wallet.name %></p>
  <p>Balance: <%= wallet.balance %></p>
  <p>Wallet address: <%= wallet.wallet_address %></p>
</div>
<div class="private_key" value='<%= wallet.private_key%>'>
  <p>key: <%= wallet.private_key%></p>
</div>

<div>
  <%= link_to 'Delete', wallet, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>

<input id="pub_ad" type="text" value='<%= wallet.wallet_address%>' style="display: none;" /><br />
<div id="pub_qrcode"></div>
<input id="priv_ad" type="text" value='<%= wallet.private_key%>' style="display: none;" /><br />
<div id="priv_qrcode"></div>


<% end %>
<%= link_to "Add existing", new_wallet_path %>
<%= link_to 'Make a new wallet', generate_key_path, method: :generate %>
