<h4>Add Wallet</h4>
<%= form_for @wallet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: 'Business Wallet' %>
  <%= f.label :wallet_address %>
  <%= f.text_field :wallet_address , placeholder: 'i.e hxenowr3289x84932f' %>
  <%= f.submit "Add Wallet", class: 'btn waves-light wave-effect btn-green'%>
<% end %>
